<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <useStyles filename="nifty-default-styles.xml" />
  <useStyles filename="Interface/Styles/textfield.xml" />
  <useStyles filename="Interface/Styles/radiobutton.xml" />
  <useStyles filename="Interface/Styles/slider.xml" />
  <useStyles filename="Interface/Styles/fonts.xml" />
  <useStyles filename="Interface/Styles/imageselect.xml" />
  <useControls filename="nifty-default-controls.xml" />
  <screen id="Editor" controller="dronewars.input.EditorController">
    <layer id="layer" childLayout="absolute">
      <panel childLayout="center" backgroundColor="#303030cc" width="100%" 
             height="20%" x="0%" y="80%">
        <effect>
          <onStartScreen name="fade" start="#0" end="#F" length="300" startDelay="200"/>
          <onEndScreen name="fade" start="#F" end="#0" length="300" startDelay="0"/>
          <onHover name="fade" start="#F" end="#D"/>
        </effect>
        <!-- ROOT -->
        <panel childLayout="vertical">
            <!--
            <panel childLayout ="vertical">
                <control name="horizontalScrollbar" id="scrollBar"/>
            </panel>
            -->
            <panel childLayout="horizontal" id="scrollArea">

              <!-- IMAGE SELECT -->
              <panel childLayout="vertical" marginRight="80">  
                  <panel childLayout="horizontal" align="center">
                        <control name="label" text="MAP" color="#E3DBC9" marginRight="10"/>
                        <control id="mapSelect" name="imageSelect" height="70%" width="240px"
                                  imageWidth="100%" />
                   </panel>
              </panel>

              <!-- RAIN - Options -->
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="RAIN OPTIONS" color="#E3DBC9" marginRight="10" align="center"/>
                  <panel childLayout="horizontal" align="center">
                    <control id="rain_btn" name="button" label="Toggle Rain" visibleToMouse="true"/>
                  </panel>
              </panel>

              <!-- WATER - OPTIONS -->
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="WATER OPTIONS" color="#E3DBC9" marginRight="10"/>
                  <panel childLayout="horizontal" align="right">
                    <control name="label" text="Level" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_Level" name="horizontalSlider" min="0" max="48"/>
                  </panel>
                  <panel childLayout="horizontal" align="right">
                    <control name="label" text="Variance" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_LevelVariance" name="horizontalSlider" min="0" max="10"/>
                  </panel>
                  <panel childLayout="horizontal" align="right">
                    <control name="label" text="Amplitude" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_WaveAmplitude" name="horizontalSlider" min="0" max="5"/>
                  </panel>
                  <panel childLayout="horizontal" align="right">
                    <control name="label" text="Reflectivity" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_Reflectivity" name="horizontalSlider" min="0" max="1" stepSize="0.01"/>
                  </panel>
              </panel>

              <!-- WATER - SLIDER -->
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="WATER COLOR" color="#E3DBC9" marginRight="10"/>
                  <panel childLayout="horizontal">
                    <control name="label" text="R" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_Color_R" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="G" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_Color_G" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="B" color="#E3DBC9" marginRight="10"/>
                    <control id="Water_Color_B" name="horizontalSlider" min="0" max="255"/>
                  </panel>
              </panel>

              <!-- LIGHT - SLIDER -->
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="SUN COLOR" color="#E3DBC9" marginRight="10"/>
                  <panel childLayout="horizontal">
                    <control name="label" text="R" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunColor_R" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="G" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunColor_G" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="B" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunColor_B" name="horizontalSlider" min="0" max="255"/>
                  </panel>
              </panel>
              
              
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="AMBIENT COLOR" color="#E3DBC9" marginRight="10"/>
                  <panel childLayout="horizontal">
                    <control name="label" text="R" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_AmbientColor_R" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="G" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_AmbientColor_G" name="horizontalSlider" min="0" max="255"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="B" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_AmbientColor_B" name="horizontalSlider" min="0" max="255"/>
                  </panel>
              </panel>
              
              <panel childLayout="vertical" marginRight="80">  
                  <control name="label" text="SUN DIRECTION" color="#E3DBC9" marginRight="10"/>
                  <panel childLayout="horizontal">
                    <control name="label" text="X" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunDirection_X" name="horizontalSlider" min="-10" max="10"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="Y" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunDirection_Y" name="horizontalSlider" min="-10" max="0"/>
                  </panel>
                  <panel childLayout="horizontal">
                    <control name="label" text="Z" color="#E3DBC9" marginRight="10"/>
                    <control id="Sky_SunDirection_Z" name="horizontalSlider" min="-10" max="10"/>
                  </panel>
              </panel>
              
              <panel childLayout="vertical" marginRight="80">
                  <control name="label" text="SKY OPTIONS" color="#E3DBC9" marginRight="10" align="right"/>
                  <panel childLayout="horizontal" align="center">
                    <control id="sky_btn" name="button" label="Change Sky" visibleToMouse="true"/>
                  </panel>
              </panel>
              
            </panel>
          </panel>
      </panel>
    </layer>
  </screen>
</nifty>
